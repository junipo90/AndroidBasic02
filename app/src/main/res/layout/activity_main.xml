<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="어서오세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/greetText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameOption"
            app:layout_constraintTop_toBottomOf="@+id/greetText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/priceText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="200dp"
            android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/productOption"
            app:layout_constraintTop_toBottomOf="@+id/priceText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/notifyText" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/numberOption"
            app:layout_constraintTop_toBottomOf="@+id/notifyText" app:layout_constraintEnd_toEndOf="@+id/notifyText"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="숫자 추가"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addButton"
            app:layout_constraintTop_toTopOf="@+id/removeButton" app:layout_constraintEnd_toStartOf="@+id/removeButton"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="숫자 삭제"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/removeButton"
            app:layout_constraintTop_toBottomOf="@+id/numberOption"
            app:layout_constraintEnd_toEndOf="@+id/numberOption" android:layout_marginTop="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>